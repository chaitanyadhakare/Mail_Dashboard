@using MVCHackathon.Areas.Customer.Models
@model MVCHackathon.Areas.Customer.Models.CustomerModel

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@using (Html.BeginForm())
{   <title>Sign-Up</title>
    <div class="login-box animated fadeInUp" style="padding-bottom:0px">
        <div class="box-header">
            <h2>Register Customer</h2>
        </div>
        @if (ViewBag.IsError == true)
                {
            <div class="alert alert-danger">
                @ViewBag.Message
            </div>
        }

        @if (ViewBag.IsSuccess == true)
                {
            <div class="alert alert-success">
                @ViewBag.Message
            </div>
        }
        <div id="loginbox" style="margin-top:10px; padding: 20px 40px;" class="mainbox">
            <div class="panel panel-info">
                <div class="clearfix"></div>
                <div>
                    <div style="padding-top:10px; float:left;" class="panel-body">

                        <div style="margin-bottom: 10px" class="input-group">
                            <span><label>Customer Name</label></span>
                            <input id="UserRealName" type="text" class="form-control" name="UserRealName" placeholder="Customer Name" pattern="[a-zA-Z0-9\s]+{4,50}" required>

                        </div>

                        <div style="margin-bottom: 10px" class="input-group">
                            <span><label>Mobile Number</label></span>
                            <input id="Mobile" type="tel" class="form-control" name="Mobile" placeholder="Mobile No" maxlength="10" pattern="^\d{10}$" required>

                        </div>

                        <div style="margin-bottom: 10px" class="input-group">
                            <span><label>Email</label></span>

                            <input id="Email" type="text" class="form-control" name="Email" placeholder="Email" required>
                        </div>
                        <div style="margin-bottom: 10px" class="input-group">
                            <span><label>Username</label></span>
                            <input id="UserName" type="text" class="form-control" name="UserName" placeholder="UserName" title="Must contain one uppercase and lowercase letter,at least 4 or more characters" pattern="[A-z,0-9]{4,10}"
                                   required>
                        </div>
                        

                        <div style="margin-bottom: 10px" class="input-group">
                            <span><label>Password</label></span>
                            <input id="login-password" type="password" class="form-control" name="Password" placeholder="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
                        </div>

                    </div>

                </div>
                <div style="margin-top:400px;" class="form-group">
                    <!-- Button -->
                    <div class="col-sm-12 controls">
                        <input class="btn btn-primary" type="submit" name="register" value="Register" />
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

    </div>
}



